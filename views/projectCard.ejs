<div class="card m-2 h-100 fadein" style="width: 45rem;">
  <div class="h-100">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-8">
          <img src="<%= image %>" class="card-img-top pb-3" alt="An image of the <%= name %> project">
        </div>
        <div class="col-sm text-sm-start">
          <h5 class="card-title p-2"><%= name %></h5>
          <p class ="card-text p-2"><%= details %></p>
          <a href="/project/<%=ident%>" class="btn btn-primary px-2 py-1 float-end">Learn More</a>
        </div>
      </div>
    </div>
  </div>
</div>
